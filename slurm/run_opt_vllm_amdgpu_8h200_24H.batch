#!/bin/bash
#SBATCH --time=24:00:00
#SBATCH --nodes=1 --ntasks-per-node=1 --cpus-per-task=4
#SBATCH --partition=h200 --gres=gpu:8
#SBATCH --no-requeue
#SBATCH --mem=96G
#SBATCH --out=../logs/run_opt.%j.out

# if PROJECT_DIR is not defined, then expect we are in ${PROJECT_DIR}/slurm
if [[ -z "${PROJECT_DIR}" ]]; then
    export PROJECT_DIR="$(dirname "$(pwd)")"
fi

# ENV_FILE=init_environment_default.sh
ENV_FILE=init_environment_vllm_amd.sh

if [ -f "${PROJECT_DIR}/${ENV_FILE}" ]; then
    source "${PROJECT_DIR}/${ENV_FILE}.sh"
fi

cd ${PROJECT_DIR}

export OUTLINES_CACHE_DIR=/tmp/.drchajan.vlll.outlines
# see https://github.com/vllm-project/vllm/discussions/15644
export VLLM_USE_V1=0

export PYTHONPATH=.:/home/drchajan/devel/python/FC/drchajan/src:/home/drchajan/devel/python/FC/fever-baselines/src:$PYTHONPATH
python -m prompt_opt.run "$1"
